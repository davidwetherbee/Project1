<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.project1.MainActivity"
    android:orientation="vertical"
    android:background="@android:color/darker_gray">


    <ImageView
        android:src="@drawable/ultimate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"/>

    <TextView
    android:layout_width="match_parent"
    android:text="All Huck, No Brains!"
    android:layout_height="wrap_content"
    android:textAlignment="center"
    android:textSize="30sp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    />
    <TextView
        android:layout_width="match_parent"
        android:text="19971 E. Smoky Hill Dr."
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="16sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:text="Aurora, CO 80015"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="16sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:text="P: 720-656-4000"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="16sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:text="Hours of operation:"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="16sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:text="Mon-Sat 8am-7pm CLOSED SUN"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="16sp"
        android:paddingBottom="20dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:text="Your one stop shop for all of your ultimate frisbee needs! "
        android:layout_height="1dp"
        android:layout_weight="1"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textSize="25sp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:text="We carry discs, cleats, sportswear, and anything else you could possibly need to destroy your semi-competitive city league! "
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="25sp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:paddingBottom="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:text="NOTE: Please, no alcohol in or around the premesis..."
        android:layout_height="1dp"
        android:layout_weight="1"
        android:textAlignment="center"
        android:textSize="16sp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        />



</LinearLayout>
